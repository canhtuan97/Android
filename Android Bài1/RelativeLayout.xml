<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="#e2e3eb">


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center|left"
        android:text="RelativeLayout"
        android:background="#6666ff"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:gravity="end|bottom"
        android:layout_below="@id/text1"
        android:text="0"
        android:textSize="70dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE"
        android:layout_margin="2dp"
        android:background="#808080"
        android:layout_below="@id/text2"></Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_margin="2dp"
        android:layout_below="@id/text2"
        android:background="#808080"
        android:layout_toRightOf="@id/button1"></Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BS"
        android:layout_margin="2dp"
        android:background="#808080"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/button2"></Button>
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_margin="2dp"
        android:background="#808080"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/button3"></Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_margin="2dp"
        android:layout_below="@id/button1"></Button>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_margin="2dp"
        android:layout_below="@id/button2"
        android:layout_toRightOf="@id/button5"></Button>
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_margin="2dp"
        android:layout_below="@id/button3"
        android:layout_toRightOf="@id/button6"></Button>
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_margin="2dp"
        android:layout_below="@id/button4"
        android:background="#808080"
        android:layout_toRightOf="@id/button7"></Button>
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_margin="2dp"
        android:layout_below="@id/button5"></Button>
    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_margin="2dp"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button9"></Button>
    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:layout_margin="2dp"
        android:layout_below="@id/button7"
        android:layout_toRightOf="@id/button10"></Button>
    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_margin="2dp"
        android:background="#808080"
        android:layout_below="@id/button8"
        android:layout_toRightOf="@id/button11"></Button>
    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_margin="2dp"
        android:layout_below="@id/button9"></Button>
    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_margin="2dp"
        android:layout_below="@id/button10"
        android:layout_toRightOf="@id/button13"></Button>
    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_margin="2dp"
        android:layout_below="@id/button11"
        android:layout_toRightOf="@id/button14"></Button>
    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_margin="2dp"
        android:background="#808080"
        android:layout_below="@id/button12"
        android:layout_toRightOf="@id/button15"></Button>
    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:layout_margin="2dp"
        android:background="#808080"
        android:layout_below="@id/button13"></Button>
    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_margin="2dp"
        android:layout_below="@id/button14"
        android:layout_toRightOf="@id/button17"></Button>

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:layout_margin="2dp"
        android:layout_below="@id/button15"
        android:background="#808080"
        android:layout_toRightOf="@id/button18"></Button>
    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_margin="2dp"
        android:layout_below="@id/button16"
        android:background="#808080"
        android:layout_toRightOf="@id/button19"></Button>




</RelativeLayout>
